<!DOCTYPE html>
<html lang="en">

<head>
    <title>Hardstore</title>
    <link href="/CSS/detail.css" rel="stylesheet">

    <link href="/CSS/header.css" rel="stylesheet">
    <link href="/CSS/footer.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/190d2f0c87.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <%- include("./partials/header.ejs") %>
    </header>
    <!-- detail product -->
    <div class="general">

        <div class="productos">
            <div class="imagen">
                <img class="monitor" src=/images/products/<%= producto.prod_img %> alt="monitor">
            </div>
            <div class="main-producto">
                <h3 class="asus"><%= producto.prod_name %></h3>

                <div class="precio-stock">
                    <h3 class="precio"><%= producto.price %></h3>
                    <h3 class="dto"><%= producto.dto %></h3>
                    <h3 class="price_dto"><%= producto.price_dto %></h3>
                    <br>
                    <a href="#" class="stock">
                        <p> <i class="fas fa-check"></i>En Stock</p>
                    </a>
                </div>
                <div class="cuotas-envios">
                    <p class="cuotas">¡ 18 Cuotas sin Interes ¡ <i class="fas fa-credit-card"></i></p>
                    <br>
                    <a href="#" class="envios">
                        <p class="main-envios">Envios gratis</p>

                    </a>

                </div>
            </div>
        </div>
        <div class="button">
            <!-- ver butoon -->
            <ul class="main-ul">
                <li><img class="monitor" src=/images/products/<%= producto.prod_img %> alt="monitor"></li>
                <li><img class="monitor" src=/images/products/<%= producto.prod_img %> alt="monitor"></li>
                <li><img class="monitor" src=/images/products/<%= producto.prod_img %> alt="monitor"></li>
            </ul>

            <a href="/compra.html" class="ahora">
                <button class="btn comprar">Comprar Ahora</button>
            </a>
        </div>

        <br>
        <div class="detallePro">
            <h3>Detalle del Producto</h3>                
            <p><%= producto.tamaño%></p>
            <hr>
            <p><%= producto.tipo %></p>
            <hr>
            <p><%= producto.color %> </p>
            <hr>
            <p><%= producto.descripcion %></p>
            <hr>
            <p><%= producto.tecno %></p>
            <hr>
            <p><%= producto.pollo %></p>

        
        </div>

        <br>
        <div class="main-interesar">
            <h4>Te puede interesar</h4>
        </div>

        <div class="interes">
            <i class="fas fa-angle-left"></i>
            <img src="/images/products/monitor.webp" alt="monitor">
            <img src="/images/products/monitor.webp" alt="monitor">
            <img src="/images/products/monitor.webp" alt="monitor">
            <i class="fas fa-angle-right"></i>
        </div>
        <div class="interes-2">
            <i class="fas fa-angle-left"></i>
            <img src="/images/Monitores.jpg" alt="monitor">
            <i class="fas fa-angle-right"></i>
        </div>
    </div>
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>

</body>